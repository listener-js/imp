{
  "name": "imp",
  "version": "0.0.1",
  "description": "",
  "keywords": [
    ""
  ],
  "author": "Imp <imp@imp.tools>",
  "main": "dist/imp.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/imp-js/imp.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/imp-js/imp#readme",
  "scripts": {
    "fix": "npm run lint -- --fix",
    "lint": "eslint --ignore-path .gitignore --ext=js .",
    "pretty": "prettier --write **/*.css **/*.json **/*.md",
    "test": "jest",
    "build": "tsc",
    "docs": "typedoc --out docs --media media --theme markdown src/*.ts"
  },
  "devDependencies": {
    "@listener-js/listener": "2.1.5",
    "@listener-js/log": "1.20.0",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.5",
    "@typescript-eslint/eslint-plugin": "2.3.0",
    "@typescript-eslint/parser": "2.3.0",
    "eslint": "6.4.0",
    "eslint-config-prettier": "6.3.0",
    "eslint-plugin-prettier": "3.1.0",
    "husky": "3.0.5",
    "jest": "24.9.0",
    "lint-staged": "9.2.5",
    "prettier": "1.18.2",
    "ts-jest": "24.1.0",
    "typedoc": "0.15.0",
    "typedoc-plugin-markdown": "2.2.3",
    "typescript": "3.6.3"
  },
  "prettier": {
    "printWidth": 60,
    "semi": false,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test && npm run docs && git add docs"
    }
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts}": [
      "eslint --ignore-path .gitignore --fix",
      "git add"
    ]
  }
}
